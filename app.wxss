/* 全局样式文件 - 遵循UI/UX设计规范 */

/* 基础样式重置 */
page {
  background-color: #FFFFFF;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  color: #333333;
  line-height: 1.4;
  box-sizing: border-box;
}

/* 字体层级定义 - 基于375px基准尺寸，使用rpx适配 */

/* H1 - 页面大标题 */
.h1 {
  font-size: 68rpx;  /* 基准34px - 保留导航栏字体大小 */
  font-weight: bold;
  line-height: 95.2rpx; /* 1.4倍行高 */
}

/* H2 - 模块标题 */
.h2 {
  font-size: 28rpx;  /* 缩小为原来的一半 */
  font-weight: bold;
  line-height: 39.2rpx;
}

/* H3 - 小标题 */
.h3 {
  font-size: 24rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  line-height: 33.6rpx;
}

/* 标准正文 */
.body-text {
  font-size: 28rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  line-height: 39.2rpx;
}

/* 小号正文 */
.small-text {
  font-size: 26rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  line-height: 36.4rpx;
}

/* 辅助文字 */
.helper-text {
  font-size: 24rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  line-height: 33.6rpx;
  color: #999999;
}

/* 通用容器样式 */
.container {
  padding: 32rpx;
  background-color: #FFFFFF;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #E5E5E5;
}

/* 按钮样式 */
.primary-btn {
  height: 88rpx;
  background-color: #4CAF50;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  width: 100%;
}

.primary-btn:active {
  background-color: #45a049;
  transform: scale(0.98);
}

.secondary-btn {
  height: 88rpx;
  background-color: #E5E5E5;
  border-radius: 44rpx;
  color: #333333;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #E5E5E5;
  width: 100%;
}

.secondary-btn:active {
  background-color: #D5D5D5;
}

.text-btn {
  color: #4CAF50;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  font-weight: normal;
  background: none;
  border: none;
  text-decoration: underline;
}

/* 输入框样式 */
.input-field {
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  border: 1rpx solid #E5E5E5;
  width: 100%;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #4CAF50;
  outline: none;
}

/* 选项控件样式 */
.option-item {
  height: 96rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  border: 1rpx solid #E5E5E5;
}

.option-item.selected {
  border: 2rpx solid #4CAF50;
  background-color: #E8F5E8;
}

/* 进度条样式 */
.progress-container {
  width: 90%;
  margin: 0 auto;
  padding: 24rpx 0;
}

.progress-text {
  text-align: center;
  font-size: 26rpx;  /* 缩小为原来的一半 */
  margin-bottom: 16rpx;
  color: #333333;
}

.progress-bar {
  height: 8rpx;
  background-color: #E5E5E5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* AI助手样式 */
.ai-assistant {
  position: fixed;
  right: 24rpx;
  bottom: 120rpx;
  z-index: 1000;
}

.ai-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #9C27B0;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(156, 39, 176, 0.3);
}

.ai-bubble {
  position: absolute;
  bottom: 140rpx;
  right: 0;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  max-width: 400rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #E5E5E5;
  font-size: 24rpx;  /* 缩小为原来的一半 */
  line-height: 33.6rpx;
}

.ai-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 2000;
  max-height: 40vh;
  overflow-y: auto;
}

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/* 间距工具类 */
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* 文本对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 响应式适配 - 确保在不同屏幕尺寸下的视觉一致性 */
@media (max-width: 320px) {
  /* 小屏设备适配 */
  .h1 { font-size: 60rpx; }
  .h2 { font-size: 50rpx; }
  .h3 { font-size: 44rpx; }
  .body-text { font-size: 50rpx; }
}

@media (min-width: 414px) {
  /* 大屏设备适配 */
  .h1 { font-size: 72rpx; }
  .h2 { font-size: 60rpx; }
  .h3 { font-size: 52rpx; }
  .body-text { font-size: 60rpx; }
}