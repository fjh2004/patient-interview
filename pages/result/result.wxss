/* 结果预览页面样式 */

.page-container {
  height: 100vh;
  background-color: #F5F5F5;
  overflow: hidden;
}

.scroll-container {
  height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.header-section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #4CAF50;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  font-size: 38rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 29rpx;
  color: #666666;
}

/* 摘要卡片 */
.summary-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.card-title {
  font-size: 34rpx;  /* 增大20% */
  font-weight: bold;
  color: #333333;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
}

.summary-label {
  font-size: 29rpx;  /* 增大20% */
  color: #666666;
  font-weight: normal;
}

.summary-value {
  font-size: 29rpx;  /* 增大20% */
  color: #333333;
  font-weight: bold;
}

/* 健康信息摘要 */
.health-summary {
  margin-top: 32rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #E5E5E5;
}

.health-title {
  font-size: 31rpx;  /* 增大20% */
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

.health-items {
  margin-left: 16rpx;
}

.health-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.health-dot {
  color: #4CAF50;
  font-size: 29rpx;  /* 增大20% */
  margin-right: 16rpx;
  line-height: 33.6rpx;
}

.health-text {
  font-size: 29rpx;  /* 增大20% */
  color: #666666;
  line-height: 33.6rpx;
  flex: 1;
}

/* 建议区域 */
.advice-section {
  margin-top: 32rpx;
  padding: 24rpx;
  background-color: #E8F5E8;
  border-radius: 12rpx;
  border-left: 4rpx solid #4CAF50;
}

.advice-title {
  font-size: 29rpx;  /* 增大20% */
  font-weight: bold;
  color: #2E7D32;
  margin-bottom: 16rpx;
  display: block;
}

.advice-content {
  font-size: 29rpx;  /* 增大20% */
  color: #388E3C;
  line-height: 33.6rpx;
}

/* 操作按钮区域 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-section .secondary-btn,
.action-section .primary-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 29rpx;  /* 增大20% */
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn {
  background-color: #E5E5E5;
  color: #333333;
  border: 1rpx solid #E5E5E5;
}

.primary-btn {
  background-color: #4CAF50;
  color: #FFFFFF;
  border: none;
}

/* 温馨提示 */
.tip-section {
  background-color: #FFF3E0;
  border: 1rpx solid #FFB74D;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
}

.tip-text {
  font-size: 26rpx;  /* 增大20% */
  color: #E65100;
  line-height: 30.8rpx;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.detail-modal {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  width: 90vw;
  max-height: 80vh;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #E5E5E5;
}

.modal-title {
  font-size: 34rpx;  /* 增大20% */
  font-weight: bold;
  color: #333333;
}

.modal-close {
  font-size: 38rpx;  /* 增大20% */
  color: #999999;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.modal-content {
  max-height: 60vh;
  padding: 32rpx;
}

.answer-item {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.answer-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.question-header {
  margin-bottom: 16rpx;
}

.question-number {
  font-size: 26rpx;  /* 增大20% */
  color: #4CAF50;
  font-weight: bold;
  margin-right: 16rpx;
}

.question-content {
  font-size: 29rpx;  /* 增大20% */
  color: #333333;
  line-height: 33.6rpx;
}

.answer-content {
  display: flex;
  align-items: flex-start;
}

.answer-label {
  font-size: 26rpx;  /* 增大20% */
  color: #666666;
  margin-right: 16rpx;
  white-space: nowrap;
}

.answer-value {
  font-size: 29rpx;  /* 增大20% */
  color: #333333;
  line-height: 33.6rpx;
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .header-title {
    font-size: 30rpx;
  }

  .summary-label,
  .summary-value {
    font-size: 26rpx;
  }
}

@media (min-width: 414px) {
  .header-title {
    font-size: 36rpx;
  }

  .summary-label,
  .summary-value {
    font-size: 31rpx;
  }
}